{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "package.json",
    "tsconfig.json",
    "pnpm-lock.yaml",
    "pnpm-workspace.yaml"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "clean": {},
    "format": {
      "dependsOn": ["//#format"]
    },
    "//#format": {},
    "lint": {},
    "knip": {
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "bench": {
      "dependsOn": ["build"],
      "outputs": ["logs/**"]
    },
    "e2e:smoke": {
      "dependsOn": ["build"],
      "cache": false
    },
    "e2e:integration": {
      "dependsOn": ["build"],
      "cache": false
    },
    "deploy": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "generate": {
      "cache": false
    }
  }
}
