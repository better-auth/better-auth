{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"suspicious": {
				"noImplicitAnyLet": "warn",
				"noDuplicateObjectKeys": "warn"
			},
			"performance": {
				"noDelete": "error"
			},
			"complexity": {
				"noUselessSwitchCase": "warn",
				"noUselessTypeConstraint": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		}
	},
	"files": {
		"ignore": [
			"dist",
			"build",
			".next",
			".svelte-kit",
			"package.json",
			".contentlayer",
			".turbo",
			".nuxt",
			".source",
			".expo",
			".cache",
			"dev/cloudflare/drizzle"
		]
	}
}
